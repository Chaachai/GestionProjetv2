        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/societe_popup_tache"
        app:layout_constraintEnd_toStartOf="@+id/textView9"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/heur_popup_tache"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/heur_popup_tache"
        android:layout_width="74dp"
        android:layout_height="25dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="108dp"
        android:text="15:35"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/date_popup_tache" />

    <TextView
        android:id="@+id/date_popup_tache"
        android:layout_width="104dp"
        android:layout_height="24dp"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="16dp"
