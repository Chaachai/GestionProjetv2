        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/commentaire_popup_tache"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/societe_popup_tache" />

    <ImageButton
        android:id="@+id/dismiss_tache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="111dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="1dp"
        android:background="@null"
        app:layout_constraintBottom_toTopOf="@+id/societe_popup_tache"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/date_popup_tache"
