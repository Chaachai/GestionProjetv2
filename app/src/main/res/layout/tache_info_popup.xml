        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/societe_popup_tache"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nbrheur_popup_tache"
        app:layout_constraintTop_toBottomOf="@+id/heur_popup_tache" />

    <TextView
        android:id="@+id/nbrheur_popup_tache"
        android:layout_width="46dp"
        android:layout_height="24dp"
        android:layout_marginBottom="17dp"
        android:layout_marginTop="20dp"
