<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".action.statistics.StatisticsMenuActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        android:layout_marginEnd="41dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="38dp"
        android:text="Quelles statistiques voulez-vous consulter ?"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/societe_statistics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/societe_statistics"
        android:layout_width="122dp"
        android:layout_height="122dp"
        android:layout_marginEnd="131dp"
        android:layout_marginStart="131dp"
        android:background="@drawable/cerclebackgroundpurple"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/societe_statistics_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView26"
        app:srcCompat="@drawable/ic_people_black_24dp" />

    <TextView
        android:id="@+id/societe_statistics_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="54dp"
        android:layout_marginEnd="153dp"
        android:layout_marginStart="153dp"
        android:clickable="true"
        android:text="Sociétés"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/projet_statistics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/societe_statistics" />


    <ImageView
        android:id="@+id/projet_statistics"
        android:layout_width="122dp"
        android:layout_height="122dp"
        android:layout_marginEnd="131dp"
        android:layout_marginStart="131dp"
        android:background="@drawable/cerclebackgroundpink"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/projet_statistics_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/societe_statistics_text"
        app:srcCompat="@drawable/ic_widgets_black_24dp" />


    <TextView
        android:id="@+id/projet_statistics_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="58dp"
        android:layout_marginEnd="159dp"
        android:layout_marginStart="160dp"
        android:clickable="true"
        android:text="Projets"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/projet_statistics" />


</android.support.constraint.ConstraintLayout>